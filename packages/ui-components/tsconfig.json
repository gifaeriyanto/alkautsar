{
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "ES2015",
    "strict": true,
    "jsx": "react"
  },
  "exclude": ["node_modules"]
}
